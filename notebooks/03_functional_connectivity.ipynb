 "cells": [
  {
   "cell_type": "markdown",
   "metadata": {},
   "source": [
    "# Notebook 03: Functional Connectivity\n",
    "\n",
    "Calculate functional connectivity matrices and create publication-quality visualizations."
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Import all required libraries\n",
    "import numpy as np\n",
    "import pandas as pd\n",
    "import matplotlib.pyplot as plt\n",
    "import seaborn as sns\n",
    "from pathlib import Path\n",
    "import json\n",
    "from nilearn.connectome import ConnectivityMeasure\n",
    "import warnings\n",
    "warnings.filterwarnings('ignore')\n",
    "\n",
    "print(\"✓ All required libraries imported successfully\")"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Set random seed for reproducibility\n",
    "np.random.seed(42)\n",
    "\n",
    "print(\"✓ Random seed set to 42\")"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Define paths\n",
    "notebook_dir = Path.cwd()\n",
    "project_dir = notebook_dir.parent\n",
    "data_dir = project_dir / 'data'\n",
    "figures_dir = project_dir / 'figures'\n",
    "\n",
    "# Load config\n",
    "config_path = data_dir / 'config.json'\n",
    "with open(config_path, 'r') as f:\n",
    "    config = json.load(f)\n",
    "\n",
    "print(f\"✓ Configuration loaded\")\n",
    "print(f\"  Data directory: {data_dir}\")"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],\n",
    "source": [
    "# Load all_time_series.npy\n",
    "print(\"Loading extracted time series...\")\n",
    "timeseries_path = data_dir / 'all_time_series.npy'\n",
    "\n",
    "all_time_series = np.load(timeseries_path, allow_pickle=True)\n",
    "print(f\"✓ Time series loaded\")\n",
    "print(f\"  Number of subjects: {len(all_time_series)}\")\n",
    "print(f\"  First subject shape: {all_time_series[0].shape}\")"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Calculate correlation matrix per subject using ConnectivityMeasure\n",
    "print(\"\\nCalculating correlation matrices...\")\n",
    "\n",
    "# Initialize ConnectivityMeasure with correlation kind\n",
    "connectivity_measure = ConnectivityMeasure(kind='correlation')\n",
    "\n",
    "# Calculate connectivity for each subject\n",
    "subject_matrices = []\n",
    "for i, time_series in enumerate(all_time_series):\n",
    "    # Calculate correlation matrix\n",
    "    corr_matrix = connectivity_measure.fit_transform([time_series])[0]\n",
    "    subject_matrices.append(corr_matrix)\n",
    "    \n",
    "    if (i + 1) % 5 == 0:\n",
    "        print(f\"  Subject {i+1}: correlation matrix computed, shape {corr_matrix.shape}\")\n",
    "\n",
    "print(f\"✓ Correlation matrices computed for {len(subject_matrices)} subjects\")"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Average all subject matrices into one group matrix\n",
    "print(\"Averaging correlation matrices across subjects...\")\n",
    "\n",
    "mean_correlation = np.mean(subject_matrices, axis=0)\n",
    "\n",
    "print(f\"✓ Group-averaged correlation matrix computed\")\n",
    "print(f\"  Matrix shape: {mean_correlation.shape}\")\n",
    "print(f\"  Value range: [{mean_correlation.min():.4f}, {mean_correlation.max():.4f}]\")\n",
    "print(f\"  Mean correlation: {mean_correlation[np.triu_indices_from(mean_correlation, k=1)].mean():.4f}\")"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Save mean matrix as data/functional_matrix.npy\n",
    "functional_matrix_path = data_dir / 'functional_matrix.npy'\n",
    "np.save(functional_matrix_path, mean_correlation)\n",
    "\n",
    "print(f\"✓ Functional connectivity matrix saved\")\n",
    "print(f\"  Path: {functional_matrix_path}\")\n",
    "print(f\"  File size: {functional_matrix_path.stat().st_size / (1024**2):.2f} MB\")"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Set matplotlib style\n",
    "plt.rcParams['font.family'] = 'DejaVu Sans'\n",
    "plt.rcParams['font.size'] = 8\n",
    "plt.rcParams['savefig.dpi'] = 300\n",
    "plt.rcParams['savefig.bbox'] = 'tight'\n",
    "\n",
    "print(\"✓ Matplotlib rcParams configured\")"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],\n",
    "source": [
    "# Create publication-quality heatmap\n",
    "print(\"\\nGenerating functional connectivity heatmap...\")\n",
    "\n",
    "fig, ax = plt.subplots(figsize=(14, 12))\n",
    "\n",
    "# Create heatmap with RdBu_r colormap, centered at 0\n",
    "sns.heatmap(\n",
    "    mean_correlation,\n",
    "    cmap='RdBu_r',\n",
    "    center=0,\n",
    "    vmin=-1,\n",
    "    vmax=1,\n",
    "    square=True,\n",
    "    cbar_kws={'label': 'Correlation Coefficient'},\n",
    "    ax=ax,\n",
    "    xticklabels=False,\n",
    "    yticklabels=False\n",
    ")\n",
    "\n",
    "ax.set_title('Group-Averaged Functional Connectivity Matrix\\n(Destrieux 163 Regions)', \n",
    "             fontsize=10, fontweight='bold', pad=20)\n",
    "ax.set_xlabel('Brain Region', fontsize=9)\n",
    "ax.set_ylabel('Brain Region', fontsize=9)\n",
    "\n",
    "plt.tight_layout()\n",
    "\n",
    "# Save as PDF and PNG\n",
    "pdf_path = figures_dir / 'functional_connectivity_matrix.pdf'\n",
    "png_path = figures_dir / 'functional_connectivity_matrix.png'\n",
    "\n",
    "plt.savefig(pdf_path, dpi=300, bbox_inches='tight')\n",
    "plt.savefig(png_path, dpi=150, bbox_inches='tight')\n",
    "plt.close()\n",
    "\n",
    "print(f\"✓ Functional connectivity heatmap saved:\")\n",
    "print(f\"  PDF: {pdf_path}\")\n",
    "print(f\"  PNG: {png_path}\")"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Print top 10 strongest connections\n",
    "print(\"\\nTop 10 Strongest Connections:\")\n",
    "print(\"-\" * 50)\n",
    "\n",
    "# Get upper triangle indices\n",
    "row_indices, col_indices = np.triu_indices_from(mean_correlation, k=1)\n",
    "correlations = mean_correlation[row_indices, col_indices]\n",
    "\n",
    "# Create dataframe\n",
    "connections_df = pd.DataFrame({\n",
    "    'Region1': row_indices,\n",
    "    'Region2': col_indices,\n",
    "    'Correlation': correlations\n",
    "})\n",
    "\n",
    "# Sort by correlation\n",
    "top_connections = connections_df.nlargest(10, 'Correlation')\n",
    "\n",
    "print(\"\\n\")\n",
    "for idx, row in top_connections.iterrows():\n",
    "    print(f\"  Region {int(row['Region1']):3d} <-> Region {int(row['Region2']):3d}: {row['Correlation']:.4f}\")\n",
    "\n",
    "print(\"-\" * 50)"
   ]
  },
  {
   "cell_type": {"metadata": {},
   "execution_count": null,
   "outputs": [],
   "source": [
    "# Print completion summary\n",
    "print(\"\\n\" + \"=\"*60)\n",
    "print(\"FUNCTIONAL CONNECTIVITY SUMMARY\")\n",
    "print(\"=\"*60)\n",
    "print(f\"\\nConnectivity Analysis:\")\n",
    "print(f\"  Subjects analyzed: {len(all_time_series)}\")\n",
    "print(f\"  Brain regions: {mean_correlation.shape[0]}\")\n",
    "print(f\"  Correlation range: [{mean_correlation.min():.4f}, {mean_correlation.max():.4f}]\")\n",
    "print(f\"\\nData and Figures saved:\")\n",
    "print(f\"  Connectivity matrix: {functional_matrix_path}\")\n",
    "print(f\"  Heatmap: {pdf_path}\")\n",
    "print(f\"\\nNext Step: Run Notebook 04 (Build Connectome Graph)\")\n",
    "print(\"=\"*60)"
   ]
  }
 ],
